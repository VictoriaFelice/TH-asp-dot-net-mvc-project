@{
	//Layout = null; //null tells MVC that this view isn't using a layout page
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Comic Book Title";
}

<h1>@ViewBag.SeriesTitle</h1>
<h2>Issue #@ViewBag.IssueNumber</h2>

<h5>Description:</h5>
<!-- For security reasons, MVC will escape by default any HTML content that is written to the view.
To prevent MVC from doing that, we can use the Html.Raw method to write the value to the view -->
<div>@Html.Raw(ViewBag.Description)</div>

@if (@ViewBag.Artists.Length > 0)
{
	<h5>Artists:</h5>
	<div>
		<ul>@foreach (var artist in @ViewBag.Artists)
				{
					<li>@artist</li>
				}
		</ul>
	</div>
}